
@{
    Pedido pedido = ViewBag.pedidos;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Alterar</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
</head>
<body class="container" style="padding-top:30px">
    <form asp-action="Alterar" asp-controller="Pedido" >
        <input type="hidden" asp-for="@pedido.Pedidoid"/>
        <fieldset>
            <legend class="font-weight-bold"><font color="#04B4AE">Editar Pedido</font></legend>
            <div>
                <label asp-for="@pedido.Pedidoid">Id:</label>
                <input type="text" asp-for="@pedido.Pedidoid" class="form-control" readonly=""  />
            </div>

            <div class="form-group">
                <label asp-for="@pedido.Produto">Produto:</label>
                <input type="text" asp-for="@pedido.Produto" class="form-control" required/>
            </div>

            <div class="form-group">
                <label asp-for="@pedido.Quantidade">Quantidade:</label>"
                <input type="text" asp-for="@pedido.Quantidade" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="@pedido.Valor">Valor:</label>
                <input type="text" asp-for="@pedido.Valor" class="form-control" required />
            </div>

            <div class="form-group">
                <label asp-for="@pedido.Fornecedor">Fornecedor:</label>
                <input type="text" asp-for="@pedido.Fornecedor" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="@pedido.Data">Data:</label>
                <input type="text" asp-for="@pedido.Data" class="form-control" />
            </div>

            <input type="submit" value="Alterar" class="btn btn-info" />
        </fieldset>
    </form>
</body>
</html>
